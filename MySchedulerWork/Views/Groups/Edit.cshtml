@model MySchedulerWork.Models.Group

@{
    ViewData["Title"] = "Edit";
    var model = ViewBag.Error;


    var error = "";

    if (model != null)
    {

        error = model.ErrorMessage;
    }
}

<h1>Редагувати</h1>


<hr />
<div class="border container" style="padding:30px;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger">@error</span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <input asp-for="Course" class="form-control" />
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfStudents" class="control-label"></label>
                <input asp-for="AmountOfStudents" class="form-control" />
                <span asp-validation-for="AmountOfStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">На головну</a>
    @*@*Html.ActionLink("Назад", "Index", "Home", new { }, htmlAttributes: new { @class = "btn btn-secondary" })*@

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

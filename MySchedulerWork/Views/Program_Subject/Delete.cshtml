@model MySchedulerWork.Models.Program_Subject

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>


<div class="border container" style="padding: 30px; border: 2px solid #adafae !important ">
    @*<div class="form-group hidden">
            <input name="courseId" class="form-control" type="text" value="@ViewBag.CourseId" />
        </div>*@
    <h4>Program_Subject</h4>
    <hr />
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="Subject"></label>
        </div>
        <div class="col-6">
            @Html.DisplayFor(model => model.Subject.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="Type"></label>
        </div>
        <div class="col-6">
            @Html.DisplayFor(model => model.Type)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="MainTeacher"></label>
        </div>
        <div class="col-6">
            @Html.DisplayFor(model => model.MainTeacher.FullName)
        </div>
    </div>


    <form asp-action="Delete">
        <div class="form-group hidden">
            <input name="courseId" class="form-control" type="text" value="@ViewBag.CourseId" />
        </div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-controller="CoursePrograms" asp-action="Details" asp-route-id="@ViewBag.CourseId" class="btn btn-secondary">Назад</a>
    </form>

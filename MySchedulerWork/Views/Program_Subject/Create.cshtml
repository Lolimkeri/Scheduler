@model MySchedulerWork.Models.Program_Subject

@{
    ViewData["Title"] = "Create";
    var model = ViewBag.Error;


    var error = "";


    if (model != null)
    {

        error = model.ErrorMessage;
    }
}

<h1>Додати предмет до програми</h1>


<hr />
<div class="border container" style="padding:30px;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group hidden">
                <input name="courseId" class="form-control" type="text" value="@ViewBag.CourseId" />
            </div>
            <div class="form-group">
                <label class="control-label">Предмет</label>
                @Html.DropDownList("subjectId", ViewBag.Subjects as SelectList, "Виберіть предмет", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Тип</label>
                <select id="type" class="form-control" name="type">
                    <option value="">Виберіть тип</option>
                    <option value="Лекція">Лекція</option>
                    <option value="Практика">Практика</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Викладач</label>
                @Html.DropDownList("mainteacherId", ViewBag.Teachers as SelectList, "Виберіть викладача", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label class="control-label">Асистент</label>
                @Html.DropDownList("labteacherId", ViewBag.Teachers as SelectList, "Виберіть асистента", new { @class = "form-control" })
            </div>

            <span class="text-danger">@error</span>

            <div class="form-group" style="margin-top: 15px;">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*//CoursePrograms/Details/1*@
    <a asp-action="Details" asp-controller="CoursePrograms" asp-route-id="@ViewBag.CourseId" class="btn btn-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
